<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.splash.SplashFragment"
        android:label="fragment_splash2"
        tools:layout="@layout/fragment_splash2" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_splashFragment_to_screenOneFragment"
            app:destination="@id/screenOneFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenOneFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.Onboarding.ScreenOneFragment"
        android:label="fragment_screen_one"
        tools:layout="@layout/fragment_screen_one" >
        <action
            android:id="@+id/action_screenOneFragment_to_screenTwoFragment"
            app:destination="@id/screenTwoFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenTwoFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.Onboarding.ScreenTwoFragment"
        android:label="fragment_screen_two"
        tools:layout="@layout/fragment_screen_two" >
        <action
            android:id="@+id/action_screenTwoFragment_to_screenThreeFragment"
            app:destination="@id/screenThreeFragment" />
    </fragment>
    <fragment
        android:id="@+id/screenThreeFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.Onboarding.ScreenThreeFragment"
        android:label="fragment_screen_three"
        tools:layout="@layout/fragment_screen_three" >
        <action
            android:id="@+id/action_screenThreeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_screenThreeFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addBooksFragment"
            app:destination="@id/addBooksFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.auth.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_logInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBooksFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.add.AddBooksFragment"
        android:label="fragment_add_books"
        tools:layout="@layout/fragment_add_books" >
        <action
            android:id="@+id/action_addBooksFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_addBooksFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayFragment"
        android:name="com.ramgdeveloper.ramglibrary.fragments.display.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display" >
        <action
            android:id="@+id/action_displayFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_displayFragment_to_addBooksFragment"
            app:destination="@id/addBooksFragment" />
    </fragment>
</navigation>